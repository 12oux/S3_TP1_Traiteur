extends pageLayout

block content
.container.my-4.text-center
        br
        h4.text-primary Commandes confirm√©es:
        .card.col-6.m-auto
            .card-body
                table.table
                    thead.thead-light
                        tr
                        th(scope='col') ID
                        th(scope='col') Prix
                    tbody
                        each confirmedCart in confirmedCarts
                            tr
                                td= confirmedCart.cartId 
                                td= confirmedCart.prixTotal
                                a(href="/confirmed/"+confirmed.cartId).btn.btn-outline-secondary.btn-sm.mr-2 Info 
                    a(href="/menu").btn.btn-outline-danger.mr-4 Retour au menu